<div>
  <div>
    <h2>Your DashBoard</h2>
  </div>
</div>

{{#each posts as |post|}}
  <div class = "card">
    <header class="card-header">
      <p class="card-header-title">{{post.post_name}}{{format_Date post.current_date}}</p>
    </header>
  </div>
{{/each}}


<div class="field">
  <label class="label">Post Title:</label>
  <div class="control">
    <input class="input" type="text" placeholder="Title Name Here">
  </div>
</div>

<div class="field">
  <label class="label">Content:</label>
  <div class="control">
    <input class="input" type="text" placeholder="Content Here">
  </div>
</div>

<div class="field is-grouped">
  <p class="control">
   <a class="button is-primary">
    Create
   </a>
  </p>
  <p class="control">
    <a class="button is-light">
      Cancel
    </a>
  </p>
</div>

<script src="../public/js/dashboard.js"></script>
 